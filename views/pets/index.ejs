<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Pet Search</title>
  <link rel="stylesheet" href="/css/login.css">
</head>
<body class="body">
 <div class="banner">
    <h1> Carnegie Pet Adoption</h1>
  </div>
  <hr>
  <h1><%= user.username %>, search for adoptable pets!</h1>
  <form action="/pets/search" method="POST">
    <input type="text" name="animal" placeholder="search for your favorite album">
    <input type="submit" value="Search">
  </form>
  <div class="main-conatiner">
  <div id="favorites-container">
    <h2><%= user.username %>'s Favorites:</h2>
    <% favorites.forEach((fave) => { %>
      <div class="fave">
        <img style="margin-left: 10px;height:180px; width: 180px" src="<%= fave.artworkUrl100 %>" alt="">
        <div style="border: 4px inset grey;align-items: center;height:100px;width:180px;overflow:auto;background-color:yellowgreen;color:white;scrollbar-base-color:gold;font-family:sans-serif;padding:10px;">
        <p><%= fave.artistName %></p>
        <p><%= fave.collectionName %></p>
        </div>
        <form style="margin-left: 18%" action="/pets/favorites/<%= fave._id %>?_method=DELETE" method="post">
          <input type="submit" value="Delete">
        </form>
      </div>
    <% }) %>
  </div>
  <div id="search-results-container">
    <h2>Search Results:</h2>

    <% results.forEach((m) => { %>
      <div class="search-results" style="display: inline-block;">
        <img style="height:180px; width: 180px" src="<%= m.media.photos.photo[2].$t %>" alt="">
        <div style="height:100px;width:180px;overflow:auto;background-color:yellowgreen;color:white;scrollbar-base-color:gold;font-family:sans-serif;padding:10px;">
        <p><%= m.description.$t %></p>
        </div>

        <form action="/pets/favorites" method="POST">
          <input type="hidden" name="favorite[collectionName]" value="<%= m.description.$t %>">

          <input type="hidden" name="favorite[artworkUrl100]" value="<%=  m.media.photos.photo[2].$t  %>">
          <input style="text-align: center;" type="submit" value="SAVE">
        </form>
      </div>
    <% }) %>
  </div>
  </div>
  <a href="/users/profile">Home</a>
</body>
</html>
